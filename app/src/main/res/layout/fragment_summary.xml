<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/summary_content"
    tools:context=".SummaryFragment">


    <View
        android:id="@+id/summary_divider2"
        android:layout_width="369dp"
        android:layout_height="2dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summary_notice_display" />

    <TextView
        android:id="@+id/summary_notice_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="#232121"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/summary_notice_title"
        app:layout_constraintTop_toBottomOf="@+id/summary_notice_title" />

    <TextView
        android:id="@+id/summary_level_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#232121"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/summary_vacancy_display"
        app:layout_constraintTop_toBottomOf="@+id/summary_vacancy_display" />

    <TextView
        android:id="@+id/summary_location_display"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="#232121"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/summary_time_display"
        app:layout_constraintTop_toBottomOf="@+id/summary_time_display" />

    <TextView
        android:id="@+id/summary_vacancy_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="#232121"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/summary_location_display"
        app:layout_constraintTop_toBottomOf="@+id/summary_location_display" />

    <TextView
        android:id="@+id/summary_time_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#232121"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/summary_event_display"
        app:layout_constraintTop_toBottomOf="@+id/summary_event_display" />

    <TextView
        android:id="@+id/summary_notice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/summary_notice_title"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/summary_level_title"
        app:layout_constraintTop_toBottomOf="@+id/summary_level_title" />

    <TextView
        android:id="@+id/summary_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/summary_time_title"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/summary_event_title"
        app:layout_constraintTop_toBottomOf="@+id/summary_event_title" />

    <TextView
        android:id="@+id/summary_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/summary_location_title"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/summary_time_title"
        app:layout_constraintTop_toBottomOf="@+id/summary_time_title" />

    <TextView
        android:id="@+id/summary_vacancy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/summary_vacancy_title"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/summary_location_title"
        app:layout_constraintTop_toBottomOf="@+id/summary_location_title" />

    <TextView
        android:id="@+id/summary_level_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/summary_level_title"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/summary_vacancy_title"
        app:layout_constraintTop_toBottomOf="@+id/summary_vacancy_title" />

    <TextView
        android:id="@+id/summary_title2"
        android:layout_width="209dp"
        android:layout_height="32dp"
        android:layout_marginTop="36dp"
        android:text="@string/summary_title2"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summary_divider" />

    <TextView
        android:id="@+id/summary_title"
        android:layout_width="209dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="@string/summary_title"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/summary_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/summary_divider"
        android:layout_width="369dp"
        android:layout_height="2dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summary_title" />

    <TextView
        android:id="@+id/summary_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="28dp"
        android:text="@string/event_title"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summary_title2" />

    <TextView
        android:id="@+id/summary_event_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        android:textColor="#232121"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/summary_event_title"
        app:layout_constraintTop_toBottomOf="@+id/summary_title2" />

    <TextView
        android:id="@+id/summary_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="24dp"
        android:text="@string/summary_success_notification"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summary_divider2" />

    <TextView
        android:id="@+id/summary_eventID_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="12dp"
        android:text="@string/summary_eventID_title"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summary_notification_title" />

    <TextView
        android:id="@+id/summary_eventID_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/summary_eventID_title"
        app:layout_constraintTop_toBottomOf="@+id/summary_notification_title" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.229"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summary_eventID_display"
        app:layout_constraintVertical_bias="0.419"
        android:textColor="@color/black"
        android:backgroundTint="#ccff00"
        />

    <Button
        android:id="@+id/update_quit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:text="Update"
        android:textColor="@color/black"
        android:backgroundTint="#ccff00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back_btn"
        app:layout_constraintTop_toBottomOf="@+id/summary_eventID_display"
        app:layout_constraintVertical_bias="0.426" />

    <Button
        android:id="@+id/copy_eventID_btn"
        android:layout_width="64dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        android:text="COPY"
        android:textAlignment="center"
        android:textSize="8sp"
        android:textColor="@color/black"
        android:backgroundTint="#ccff00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summary_notification_title" />

</androidx.constraintlayout.widget.ConstraintLayout>